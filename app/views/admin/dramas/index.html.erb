<% provide(:title, "管理者ページ") %>
<%= render "shared/flash" %>
<div class="layout_position">
  <div class="layout_item_back dark_color font_white">
    <div class="admin_position">
      <h2 class="text_center font_pink">ドラマ管理ページ</h2>
      <div class="admin_btn_position">
        <%= link_to new_admin_drama_path, class: "btn btn_color_purple" do %>
          <div>新規登録</div>
        <% end %>
      </div>
      <% if @dramas.count != 0 %>
        <div class="layout_item_back white_color dark_color_position">
          <table class="font_purple admin_index">
            <% @dramas.each do |drama| %>
              <tr>
                <td>
                  <% if drama.image.attached? %>
                    <%= link_to (image_tag drama.image, class: "drama_img_small"), drama %>
                  <% end %>
                </td>
                <td class="drama_name_wide">
                  <div><%= drama.name %></div>
                </td>
                <td class="link_wide link_edit">
                  <%= link_to "編集", edit_admin_drama_path(drama) %>
                </td>
                <td  class="link_wide link_delete">
                  <%= link_to "削除", admin_drama_path(drama), method: :delete, data: { confirm: "本当に削除しますか？" } %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="return_link_position">
  <div class="return_link"><%= link_to "管理者ページへ戻る", homes_path, class: "font_white" %></div>
</div>
