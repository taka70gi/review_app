<section class="mainContent">
  <div class="container">
    <div class="drama_left">
      <% if @drama.image.attached? %>
        <%= image_tag @drama.image, class: "drama_img" %>
      <% end %>
    </div>
    <div class="drama_right">
      <h3><%= @drama.name %></h3>
      <h4>公開日：<%= @drama.release_day %></h4>
      <h4>あらすじ</h4>
      <div><%= @drama.summary %></div>
      <h4>キャスト</h4>
      <div><%= @drama.cast %></div>
    </div>
  </div>

  <div>
    <ul>
      <li><%= link_to "ユーザー情報一覧に戻る", :dramas %></li>
    </ul>
  </div>
</section>
